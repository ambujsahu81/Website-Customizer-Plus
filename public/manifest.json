{
    "name": "Webstie Customizer Plus",
    "description": "Chrome extension for customizing any website",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    },
    "action": {
      "default_title": "Webstie Customizer Plus",
      "default_popup": "popup.html"
    },
    "permissions": ["tabs"],
    "content_scripts": [
      {
        "js": ["websiteCustomizerPlus.js"],
        "matches": [
          "https://developer.chrome.com/docs/extensions/*"
        ]
      }
    ]
 }